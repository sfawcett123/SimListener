<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Platforms>x64;AnyCPU</Platforms>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Sim Listener Library</Title>
    <Copyright>Steven Fawcett</Copyright>
	<Authors>Steven Fawcett</Authors> 
	<Company>Steven Fawcett</Company>
    <Description>Sim Listener Library for Microsoft Flight Simulator 2024</Description>
    <PackageId>SimListener</PackageId>
    <PackageProjectUrl>https://github.com/sfawcett123/SimListener</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/sfawcett123/SimListener</RepositoryUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
		  
  <ItemGroup>
	  <Content Include="libraries\Microsoft.FlightSimulator.SimConnect.dll">
		  <Pack>true</Pack>
		  <PackagePath>lib\$(TargetFramework)</PackagePath>
		  <HintPath>lib\Microsoft.FlightSimulator.SimConnect.dll</HintPath>
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
  </ItemGroup>
		  
  <ItemGroup>
	  <Content Include="libraries\SimConnect.dll">
          <Pack>true</Pack>
          <PackagePath>lib\$(TargetFramework)</PackagePath>
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	      <HintPath>SimConnect.dll</HintPath>
	   </Content>
  </ItemGroup>
		  
  <ItemGroup>
    <Reference Include="Microsoft.FlightSimulator.SimConnect">
      <HintPath>libraries\Microsoft.FlightSimulator.SimConnect.dll</HintPath>
    </Reference>
  </ItemGroup>
		  
  <ItemGroup>
    <Folder Include="assets\" />
  </ItemGroup>
		  
  <ItemGroup>
      <None Update="assets\airplane.png">
	  <Pack>True</Pack>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
		  

</Project>
